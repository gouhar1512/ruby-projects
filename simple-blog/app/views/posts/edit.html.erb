<h1>Edit Post</h1>

<%= form_for:post, url:post_path, method: :patch, data: { turbo: false } do |f| %>
  <% if @post.errors.any? %>
    <ul>
      <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>
  <p>
    <%= f.label :title%><br />
    <%= f.text_field :title%>
  </p>
  <p>
    <%= f.label :body%><br />
    <%= f.text_area :body%>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
